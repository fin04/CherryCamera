<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal"/>
    
    <!-- menu버튼 -->
    <style name="MenuTabButton">
		<item name="android:textColor">@color/color_menu</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">@dimen/FONTSIZE_Small</item>
	    <item name="android:maxLength">8</item>
	    <item name="android:shadowColor">@color/color_dkgray</item>
	    <item name="android:shadowDx">0</item>
	    <item name="android:shadowDy">0</item>
	    <item name="android:shadowRadius">2</item>
	</style>	 	
	<style name="MenuScnButton">
		<item name="android:textColor">@color/color_menu</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">@dimen/FONTSIZE_Normal</item>
	    <item name="android:maxLength">8</item>
	    <item name="android:shadowColor">@color/color_shadow</item>
	    <item name="android:shadowDx">0</item>
	    <item name="android:shadowDy">0</item>
	    <item name="android:shadowRadius">3</item>
	</style>
	
	<!-- dialog -->
    <style name="DialogSubTitle">
		<item name="android:textColor">#6b8899</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">@dimen/FONTSIZE_Big</item>
	</style>
	
    <style name="DialogContent">
		<item name="android:textColor">#7ba8a9</item>
	    <item name="android:textSize">@dimen/FONTSIZE_Normal</item>
	</style>
	
</resources>