<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/OPTION_MENU_WIDTH"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/OPTION_MENU_HEIGHT"
        android:background="@color/color_option_button"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/option_title_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/option_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/btn_option_close"
            android:layout_toRightOf="@+id/option_title_icon"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="@string/camera_option"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/FONTSIZE_Biggest" />

        <ImageButton
            android:id="@+id/btn_optionmenu_close"
            android:layout_width="@dimen/MAIN_TABBUTTON_WIDTH"
            android:layout_height="@dimen/MAIN_TABBUTTON_WIDTH"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="6dp"
            android:background="@drawable/slt_color_buttonselect"
            android:src="@drawable/prev" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/optionmenu_changecamera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btn_option_changecamera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_menu_boxbutton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/option_title_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/camera_change" />

                    <TextView
                        android:id="@+id/option_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:text="@string/camera_option_frontfacing"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/FONTSIZE_Big" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btn_option_timer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_menu_boxbutton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/option_title_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/timer" />

                    <TextView
                        android:id="@+id/option_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:text="@string/camera_option_timer"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/FONTSIZE_Big" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btn_option_help"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_menu_boxbutton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/option_title_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/help0" />

                    <TextView
                        android:id="@+id/option_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:text="@string/menu_help"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/FONTSIZE_Big" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/optionmenu_flash"
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT"
                android:visibility="visible" >

                <Button
                    android:id="@+id/btn_option_flash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_menu_boxbutton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/option_title_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/flash_on" />

                    <TextView
                        android:id="@+id/option_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:text="@string/camera_option_flash"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/FONTSIZE_Big" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/optionmenu_focus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT"
                android:visibility="visible" >

                <Button
                    android:id="@+id/btn_option_focus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_menu_boxbutton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/option_title_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/focus_macro" />

                    <TextView
                        android:id="@+id/option_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:text="@string/camera_option_focus"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/FONTSIZE_Big" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT" >

                <Button
                    android:id="@+id/btn_option_resolution"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_menu_boxbutton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/option_title_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/picsize" />

                    <TextView
                        android:id="@+id/option_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:text="@string/camera_option_resolution"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/FONTSIZE_Big" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/optionmenu_effect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT" >

                <Button
                    android:id="@+id/btn_option_effect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_menu_boxbutton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/option_title_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/effect_other" />

                    <TextView
                        android:id="@+id/option_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:text="@string/camera_option_effect"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/FONTSIZE_Big" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>