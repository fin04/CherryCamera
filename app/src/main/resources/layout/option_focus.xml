<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/OPTION_MENU_WIDTH"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/OPTION_MENU_HEIGHT"
        android:background="@color/color_option_button"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/option_title_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/focus_macro" />

        <TextView
            android:id="@+id/option_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/btn_option_close"
            android:layout_toRightOf="@+id/option_title_icon"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="@string/camera_option_focus"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/FONTSIZE_Biggest" />

        <ImageButton
            android:id="@+id/btn_optionmenu_focus_close"
            android:layout_width="@dimen/MAIN_TABBUTTON_WIDTH"
            android:layout_height="@dimen/MAIN_TABBUTTON_WIDTH"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="6dp"
            android:background="@drawable/slt_color_buttonselect"
            android:src="@drawable/prev" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/radioGroup_focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/focus_radio0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT"
                android:background="@drawable/selector_menu_boxbutton"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/focus_auto"
                android:drawablePadding="15dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/camera_option_focusauto"
                android:textSize="@dimen/FONTSIZE_Normal" />

            <RadioButton
                android:id="@+id/focus_radio1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT"
                android:background="@drawable/selector_menu_boxbutton"
                android:button="@null"
                android:drawableLeft="@drawable/focus_macro"
                android:drawablePadding="15dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/camera_option_focusmacro"
                android:textSize="@dimen/FONTSIZE_Normal" />

            <RadioButton
                android:id="@+id/focus_radio2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT"
                android:background="@drawable/selector_menu_boxbutton"
                android:button="@null"
                android:drawableLeft="@drawable/focus_infinity"
                android:drawablePadding="15dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/camera_option_focusinfinity"
                android:textSize="@dimen/FONTSIZE_Normal" />

            <RadioButton
                android:id="@+id/focus_radio3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/OPTION_MENU_HEIGHT"
                android:background="@drawable/selector_menu_boxbutton"
                android:button="@null"
                android:drawableLeft="@drawable/focus_fix"
                android:drawablePadding="15dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/camera_option_focusfix"
                android:textSize="@dimen/FONTSIZE_Normal" />
        </RadioGroup>
    </ScrollView>

</LinearLayout>