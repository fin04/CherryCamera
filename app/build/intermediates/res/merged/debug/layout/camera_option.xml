<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ViewFlipper
        android:id="@+id/ViewFlipper_option"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:id="@+id/optionView0"
            layout="@layout/option_menu" />

        <include
            android:id="@+id/optionView0"
            layout="@layout/option_flash" />

        <include
            android:id="@+id/optionView0"
            layout="@layout/option_focus" />

        <include
            android:id="@+id/optionView0"
            layout="@layout/option_timer" />
        
        <include
            android:id="@+id/optionView0"
            layout="@layout/option_filter" />
        <include
            android:id="@+id/optionView0"
            layout="@layout/option_zoom" />
    </ViewFlipper>

</LinearLayout>