<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/scnButtonLayout" >
    
    
    <FrameLayout
            android:id="@+id/scnMenuLayout"
            android:layout_width="@dimen/MAIN_MENU_HEIGHT"
            android:layout_height="@dimen/MAIN_MENU_HEIGHT" >

            <ImageView
                android:id="@+id/menu_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/icon_auto" />

            <Button
                android:id="@+id/menu_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/selector_menu_scnbutton" />

            <TextView
                android:id="@+id/menu_text"
                style="@style/MenuScnButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="2dp"
                android:text="@string/scene_auto"
                android:textSize="@dimen/FONTSIZE_Normal" />

        </FrameLayout>

</LinearLayout>